@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aplicacion</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aplicacion.styles.css" asp-append-version="true" />
    
    <!--Iconos de FontAwesome-->
    <script src="https://kit.fontawesome.com/a043b2893b.js" crossorigin="anonymous"></script>
</head>
<body>
    <!--Inicio Header Veterinario-->
    <div class="container-fluid">
        @if (User.Claims.FirstOrDefault(c => c.Type == "New")?.Value == "true"){ // Si el usuario es "nuevo" se inhabilitan el acceso a las funcionalidades, se obliga a cambiar la contrasena.
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <a class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                    <img class="bi me-2" src="~/img/Logo - Veterinaria.png" width="100" height="80">
                </a>
                <ul class="nav nav-pills col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li>
                        <a class="nav-link px-2 link-dark" aria-current="page">
                            <i class="fa-solid fa-house fa-lg" style="color: #000000"></i>
                            Inicio
                        </a>
                    </li>
                    <!--
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-newspaper fa-xl" style="color: #000000;"></i>
                            Publicaciones
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Adopciones</a></li>
                            <li><a class="dropdown-item" href="#">Perdidas</a></li>
                            <li><a class="dropdown-item" href="#">Colectas</a></li>
                        </ul>
                    </li>
                    -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-image-portrait fa-xl" style="color: #000000;"></i>
                            Servicios
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item">Cuidadores</a></li>
                            <li><a class="dropdown-item">Paseadores</a></li>
                        </ul>
                    </li>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <!--
                        <li>
                            <a href="#" class="nav-link px-2 link-dark">
                                <i class="fa-solid fa-heart" style="color: #000000;"></i>
                                TinderDog
                            </a>
                        </li>
                                -->
                    }
                    <!--<li>
                        <a class="nav-link px-2 link-dark">
                            <i class="fa-solid fa-envelope fa-xl" style="color: #000000;"></i>
                            Contacto
                        </a>
                    </li>-->
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-3 text-center">
                        <div class="dropdown-center">
                                <a href="#" class="d-block link-dark text-decoration-none fw-bold dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 20px">
                                @User.Identity.Name
                                <i class="fa-solid fa-circle-user fa-lg" style="color: #0b357f; font-size: 45px;"></i>
                            </a>
                            <ul class="dropdown-menu text-small">
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li>
                                        <a class="dropdown-item">
                                            <i class="fa-solid fa-users" style="color: #000000;"></i>
                                            Clientes
                                        </a>
                                    </li>
                                }
                                <!--<li>
                                    <a class="dropdown-item">
                                        Calendario
                                    </a>
                                </li>-->
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item active" asp-area="" asp-controller="Usuarios" asp-action="CambiarContrasena">
                                        <i class="fa-solid fa-lock fa-md" style="color: #000000;"></i>
                                        Cambiar contraseña
                                    </a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="LogOut">
                                        <i class="fa-solid fa-right-from-bracket fa-md" style="color: #000000;"></i>
                                        Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-3">
                        <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Index">
                            <i class="fa-solid fa-right-to-bracket fa-lg" style="color: #ffffff;"></i>
                            Iniciar sesión
                        </a>
                    </div>
                }
            </header>
        }
        else{ // Si el usuario no es un usuario nuevo, se permite el acceso a las funcionalidades.
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                    <img class="bi me-2" src="~/img/Logo - Veterinaria.png" width="100" height="80">
                </a>
                <ul class="nav nav-pills col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 @((ViewBag.ActiveView == "Home") ? "link-light active" : "link-dark")" aria-current="page">
                            <i class="fa-solid fa-house fa-lg" style="color: #@((ViewBag.ActiveView == "Home") ? "ffffff" : "000000")"></i>
                            Inicio
                        </a>
                    </li>
                    <!--
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-newspaper fa-xl" style="color: #000000;"></i>
                            Publicaciones
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Adopciones</a></li>
                            <li><a class="dropdown-item" href="#">Perdidas</a></li>
                            <li><a class="dropdown-item" href="#">Colectas</a></li>
                        </ul>
                    </li>
                    -->
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle link-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-image-portrait fa-xl" style="color: #000000;"></i>
                                Servicios
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item @((ViewBag.ActiveView == "Cuidadores") ? "link-light active" : "link-dark")" href="Cuidadores">Cuidadores</a></li>
                                <li><a class="dropdown-item @((ViewBag.ActiveView == "Paseadores") ? "link-light active" : "link-dark")" href="Paseadores">Paseadores</a></li>
                            </ul>
                        </li>
                    }
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <!--
                        <li>
                            <a href="#" class="nav-link px-2 link-dark">
                                <i class="fa-solid fa-heart" style="color: #000000;"></i>
                                TinderDog
                            </a>
                        </li>
                        -->
                    }
                    <!--<li>
                        <a class="nav-link px-2 link-dark">
                            <i class="fa-solid fa-envelope fa-xl" style="color: #000000;"></i>
                            Contacto
                        </a>
                    </li>-->
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-3 text-center">
                        <div class="dropdown-center">
                            <a href="#" class="d-block link-dark text-decoration-none fw-bold dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 20px">
                                @User.Identity.Name
                                <i class="fa-solid fa-circle-user fa-lg" style="color: #0b357f; font-size: 45px;"></i>
                            </a>
                            <ul class="dropdown-menu text-small">
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li>
                                        <a class="dropdown-item @((ViewBag.ActiveView == "IndexClientes") ? "active" : "")" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                            <i class="fa-solid fa-users fa-md" style="color: #@((ViewBag.ActiveView == "IndexClientes") ? "ffffff" : "000000")"></i>
                                            Clientes
                                        </a>
                                    </li>
                                }
                                <!--<li>
                                    <a class="dropdown-item @((ViewBag.ActiveView == "Calendario") ? "active" : "")" asp-area="" asp-controller="Calendario" asp-action="Index">
                                        Calendario
                                    </a>
                                </li>-->
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item @((ViewBag.ActiveView == "CambiarContrasena") ? "active" : "")" asp-area="" asp-controller="Usuarios" asp-action="CambiarContrasena">
                                        <i class="fa-solid fa-lock fa-md" style="color: #@((ViewBag.ActiveView == "CambiarContrasena") ? "ffffff" : "000000")"></i>
                                        Cambiar contraseña
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="LogOut">
                                        <i class="fa-solid fa-right-from-bracket fa-md" style="color: #000000;"></i>
                                        Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-3">
                        <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Index">
                            <i class="fa-solid fa-right-to-bracket fa-lg" style="color: #ffffff;"></i>
                            Iniciar sesión
                        </a>
                    </div>
                }
            </header>
        }
    </div>
    <!--Fin Header Veterinario-->

    <div class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--Inicio del Footer-->
    <div class="container-fluid" style="position: absolute; background-color: #faf4e8; padding-left: 0px !important; padding-right: 0px !important">
        <div class="container">
            <footer class="py-5">
                <div class="row">
                    <div class="col-6 col-md-2 mb-3">
                        <h5>Publicaciones</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Adopciones</a></li>
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Perdidas</a></li>
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Colectas</a></li>
                        </ul>
                    </div>

                    <div class="col-6 col-md-2 mb-3">
                        <h5>Servicios</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Paseadores</a></li>
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Cuidadores</a></li>
                        </ul>
                    </div>

                    <div class="col-6 col-md-2 mb-3">
                        <h5>Horarios de atención</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Lunes a viernes de 8 a 13 - 17 a 20</a></li>
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Sábado de 8 a 13</a></li>
                            <li class="nav-item mb-2"><a class="nav-link p-0 text-muted">Guardias las 24 hs.</a></li>
                        </ul>
                    </div>

                    <div class="col-md-5 offset-md-1 mb-3">
                        <form>
                            <h5>Nuestra ubicación</h5>
                            <p>Calle 13 4995, Gonnet - La plata, Buenos Aires Argentina.</p>
                            <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3273.3658090954345!2d-58.02828196052553!3d-34.87215939181364!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95a2de0a7f62a3d1%3A0x58eaf36291e7779b!2sJLA%2C%20C.%2013%204995%2C%20B1897%20Gonnet%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1683927474143!5m2!1ses!2sar" style="width: 100%; height: 250px; border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </form>
                    </div>
                </div>
            </footer>
        </div>
        <div class="container-fluid" style="background-color: #67b1c4;">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top" style="margin-bottom: 0px !important;">
                <div class="col-md-4 d-flex align-items-center">
                    @if (User.Claims.FirstOrDefault(c => c.Type == "New")?.Value == "true"){
                        <a class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                            <img src="~/img/Logo 2 - Veterinaria.png" width="20%">
                        </a>
                    }else{
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                            <img src="~/img/Logo 2 - Veterinaria.png" width="20%">
                        </a>
                    }
                </div>
                <span class="mb-3 mb-md-0 text-black">&copy; 2023 LEM Software Dev.</span>
                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter" /></svg></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram" /></svg></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook" /></svg></a></li>
                </ul>
            </footer>
        </div>
    </div>
    <!--Fin del Footer-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
