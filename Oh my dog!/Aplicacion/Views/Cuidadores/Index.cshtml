                <i class="fa-solid fa-user-plus fa-xl" style="color: #ffffff;"></i>
                Publicar cuidador
            </button>

        </div>
        @foreach (var item in Model)
        {
            <div id="@item.Id" class="card d-none  container-fluid d-flex flex-column text-center align-self-center">
                @if (item.Foto != null)
                {
                    <div class="d-flex justify-content-center">
                        <img src="@item.Foto" class="align-self-center" alt="@item.Nombre" height="60">
                    </div>
                }
                else
                {
                    <i class="fa-solid fa-circle-user fa-lg" style="color: #0b357f; font-size: 50px; margin-top: 26px;"></i>
                }
                <div class="card-body text-center m-3">
                    <h4 class="card-title m-2 fw-bold">
                        @item.Nombre @item.Apellido
                    </h4>
                    @if (item.ModalidadCuidadors.Count > 0)
                    {
                        <p class="fw-bold">
                            Modalidad
                        </p>
                        <ul class="list-group list-group-flush">
                            @foreach (var modalidad in item.ModalidadCuidadors)
                            {
                                <li class="list-group-item">@((modalidad.IdModalidad == 1) ? "Ir a domicilio" : "En el hogar")</li>
                            }
                        </ul>
                    }
                    <strong style="margin-bottom: 5px;">Horario disponible</strong>
                    <p>Desde: @item.HorarioIn</p>
                    <p>Hasta: @item.HorarioOut</p>
