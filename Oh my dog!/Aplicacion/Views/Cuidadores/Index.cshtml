    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM=" crossorigin=""></script>
    <script src="https://unpkg.com/leaflet-geosearch@3.0.0/dist/geosearch.umd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet.locatecontrol@0.79.0/dist/L.Control.Locate.min.js" charset="utf-8"></script>
    <script src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js"></script>

    <!-- Validacion de relleno de formulario contactar cuidador -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var formularioContacto = document.getElementById('formContactoCuidador');
            var asunto = document.getElementById('Asunto');
            var contenido= document.getElementById('Contenido');
            var enviarButtonContacto = document.getElementById('BtnContacto');

            asunto.addEventListener('input', validarAsunto);
            contenido.addEventListener('input', validarContenido);

            function validarAsunto() {
                if (asunto.value.trim() !== '') {
                    asunto.classList.remove('is-invalid');
                   asunto.classList.add('is-valid');
                } else {
                    asunto.classList.remove('is-valid');
                    asunto.classList.add('is-invalid');
                }

                habilitarBotonEnvioContacto();
            }

            function validarContenido() {
                if (contenido.value.trim() !== '') {
                    contenido.classList.remove('is-invalid');
                    contenido.classList.add('is-valid');
                } else {
                    contenido.classList.remove('is-valid');
                    contenido.classList.add('is-invalid');
                }

                habilitarBotonEnvioContacto();
            }

            // Habilitar o deshabilitar el botón de envío según la validez del formulario
            function habilitarBotonEnvioContacto() {
                if (asunto.classList.contains('is-valid') && contenido.classList.contains('is-valid')) {
                    enviarButtonContacto.disabled = false;
                } else {
                    enviarButtonContacto.disabled = true;
                }
            }

            // Reset del formulario al presionar el boton cancelar
            var btnCancelarContacto = document.getElementById('BtnCancelarContacto');
            btnCancelarContacto.addEventListener('click', function () {
                asunto.classList.remove('is-invalid'); asunto.classList.remove('is-valid');
                contenido.classList.remove('is-invalid'); contenido.classList.remove('is-valid');
                enviarButtonContacto.disabled = true;
                formularioContacto.reset();
            });
        });
    </script>

